<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Website</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Website.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav>
            <div>
                <a asp-area="" asp-page="/Index">MichaelAaronson.com</a> 
                @* <a asp-area="Identity" asp-page="/Account/Login">Login</a> *@ 
                <partial name="_LoginPartial" />
            </div>
        </nav>
    </header>

    <main class="d-flex flex-column flex-grow-1">
        @RenderBody()
    </main>

    @inject IConfiguration Configuration
@*     <footer class="footer"> *@        
    <footer>
    <p>Michael Aaronson: +64 (0)27 242 0599, <a href="mailto:Michael@MichaelAaronson.com">Michael@MichaelAaronson.com</a>. Compiled: @System.IO.File.GetLastWriteTime(GetType().Assembly.Location).ToString("yyyy-MM-dd HH:mm")</p>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
