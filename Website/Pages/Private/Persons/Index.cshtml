@page
@model Website.Pages.Persons.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<form method="get" class="mb-3">
    <div class="row align-items-end">
        <div class="col-auto">
            <label for="GroupId" class="form-label">Filter by Group</label>
            <select asp-for="GroupId" asp-items="Model.GroupOptions" class="form-select">
                <option value="">All</option>
            </select>
        </div>
        <div class="col-auto">
            <label for="ViewMode" class="form-label">View</label>
            <select asp-for="ViewMode" class="form-select">
                <option value="table">Table</option>
                <option value="cards">Cards</option>
            </select>
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-primary">Apply</button>
        </div>
    </div>
</form>

<p>
    <a asp-page="ImageManager">Image Manager</a>
</p>

<p>
    <a asp-page="Create">Create New</a>
</p>

@if (Model.ViewMode == "cards")
{
    <p class="text-muted">@Model.Person.Count person(s)</p>
    
    @if (Model.Person.Any())
    {
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
            @foreach (var person in Model.Person)
            {
                <div class="col">
                    <div class="card h-100">
                        @if (!string.IsNullOrEmpty(person.ImageFilename))
                        {
                            @* <img src="~/Images/Persons/@person.ImageFilename" 
                                 class="card-img-top" 
                                 alt="@person.FirstName @person.LastName"
                                 style="height: 200px; object-fit: cover;"> *@
                            <img src="~/Images/Persons/@person.ImageFilename"
                                 alt="@person.FirstName @person.LastName"
                                 width="200">
                        }
                        else
                        {
                            <div class="card-img-top bg-secondary d-flex align-items-center justify-content-center text-white"
                                 style="height: 200px;">
                                <span class="fs-1">@person.FirstName?.FirstOrDefault()@person.LastName?.FirstOrDefault()</span>
                            </div>
                        }
                        <div class="card-body">
                            <h5 class="card-title">@person.FirstName @person.LastName</h5>
                            @if (!string.IsNullOrEmpty(person.Company))
                            {
                                <p class="card-text text-muted mb-1">@person.Company</p>
                            }
                        </div>
                        <div class="card-footer">
                            <a asp-page="./Edit" asp-route-id="@person.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                            <a asp-page="./Details" asp-route-id="@person.Id" class="btn btn-sm btn-outline-secondary">Details</a>
                            <a asp-page="./Delete" asp-route-id="@person.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info">
            No persons found.
        </div>
    }
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Person[0].FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Person[0].LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Person[0].Company)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Person[0].Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Person[0].Phone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Person[0].Notes)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Person[0].ImageFilename)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model.Person) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Company)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Notes)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ImageFilename)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
}
